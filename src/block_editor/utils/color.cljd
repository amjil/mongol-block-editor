(ns block-editor.utils.color
  (:require
   ["package:flutter/material.dart" :as m]))

(def transparent-argb [0 0 0 0])

(defn color->argb [color]
  (when color
    [(.-alpha color)
     (.-red color)
     (.-green color)
     (.-blue color)]))

(defn argb->color [argb]
  (when (and argb (= 4 (count argb)))
    (let [[a r g b] argb]
      (m/Color.fromARGB a r g b))))

